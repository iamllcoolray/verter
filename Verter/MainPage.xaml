<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Verter.MainPage"
             Title="Verter - Video Converter">

    <VerticalStackLayout Padding="20" Spacing="12">

        <Label x:Name="StatusLabel" Text="Idle" FontAttributes="Italic" />

        <Label x:Name="SelectedFileLabel" Text="No file selected." />

        <ProgressBar x:Name="ConversionProgressBar" HeightRequest="10" IsVisible="False" />

        <ScrollView x:Name="FileListScrollView"  IsVisible="False">
            <CollectionView x:Name="FileList" HeightRequest="120">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <HorizontalStackLayout>
            <Button x:Name="PickButton" Text="Pick Files" Clicked="OnPickClicked" IsEnabled="True" />
            <Button x:Name="ConvertButton" Text="Convert" Clicked="OnConvertClicked" IsEnabled="False" />
            <Button x:Name="CancelButton" Text="Cancel" Clicked="OnCancelClicked" IsEnabled="False" />
            <Button x:Name="ClearButton" Text="Clear" Clicked="OnClearClicked" IsEnabled="False" />
        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>
